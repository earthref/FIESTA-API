{
  "name": "earthref-fiesta-api",
  "version": "1.0.0",
  "description": "EarthRef's FIESTA API",
  "author": "Rupert Minnett <rminnett@earthref.org>",
  "license": "MIT",
  "keywords": [],
  "private": true,
  "scripts": {
    "public": "rm -rf dist/public && mkdir -p dist/public && cp -R src/public/* dist/public",
    "build": "npm run public && tsc --pretty",
    "watch": "tsc -w --pretty",
    "monitor": "nodemon -L src/api.ts",
    "debug": "node --inspect=9229 dist/api.js",
    "dev": "npm run public && concurrently -k -p '[{name}]' -n 'tsc,api' -c 'yellow.bold,cyan.bold' npm:watch npm:monitor",
    "lint": "tslint --format prose --project .",
    "test": "NODE_ENV=test TEST_PORT=3201 jest --colors --runInBand --detectOpenHandles",
    "start": "node dist/api.js"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.6.0",
    "ajv": "^6.12.0",
    "ajv-oai": "^1.2.0",
    "aws-sdk": "^2.626.0",
    "dotenv": "^8.2.0",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-mount": "^4.0.0",
    "koa-router": "^8.0.8",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.15",
    "openapi-backend": "^2.3.5"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^25.1.3",
    "@types/koa": "^2.11.2",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-json": "^2.0.18",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-mount": "^4.0.0",
    "@types/koa-router": "^7.4.0",
    "@types/koa-static": "^4.0.1",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.7.6",
    "@types/wait-on": "^4.0.0",
    "axios": "^0.19.2",
    "concurrently": "^5.1.0",
    "jest": "^25.1.0",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.8.2",
    "wait-on": "^4.0.0"
  }
}
