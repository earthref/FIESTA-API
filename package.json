{
  "name": "earthref-fiesta-api",
  "version": "0.1.0",
  "description": "EarthRef's FIESTA API",
  "author": "Rupert Minnett <rminnett@earthref.org>",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "build": "mkdir -p dist/docs && cp -R docs/* dist/docs && tsc",
    "watch-build": "mkdir -p dist/docs && cp -R docs/* dist/docs && tsc -w",
    "start": "node dist/index.js",
    "watch-start": "NODE_ENV=development nodemon --delay 2 -L -w dist/ dist/index.js",
    "dev": "concurrently -k -p '[{name}]' -n 'typescript,api' -c 'yellow.bold,cyan.bold' npm:watch-build npm:watch-start",
    "lint": "tslint --format prose --project .",
    "test": "jest"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.3.0",
    "ajv": "^6.10.2",
    "ajv-oai": "^1.1.1",
    "aws-sdk": "^2.521.0",
    "dotenv": "^8.1.0",
    "koa": "^2.8.1",
    "koa-bodyparser": "^4.2.1",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-mount": "^4.0.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.15",
    "npm": "^6.11.2",
    "openapi-backend": "^2.3.4"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^24.0.18",
    "@types/koa": "^2.0.49",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-json": "^2.0.18",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-mount": "^4.0.0",
    "@types/koa-router": "^7.0.42",
    "@types/koa-static": "^4.0.1",
    "@types/lodash": "^4.14.138",
    "@types/node": "^12.7.3",
    "@types/wait-on": "^3.2.0",
    "axios": "^0.19.0",
    "concurrently": "^4.1.2",
    "jest": "^24.9.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.19.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.6.2",
    "wait-on": "^3.3.0"
  }
}
